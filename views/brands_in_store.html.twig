<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Brand Info</title>
    </head>
    <body>
        <div class="container">
            <h1>{{ brand.getName }} Homepage</h1>

            {% if stores is not empty %}
            <h4>Here are the stores selling this brand:</h4>
            <ul>
                {% for store in stores %}
                    <li><a href="/store/{{ store.getId }}">{{ store.getName }}</a></li>
                {% endfor %}
            </ul>
            {% endif %}

            <h4>Add a store that sells this brand</h4>

                <form action"/add_brand/{{ brand.getId }}" method="post">
                    <input name="_method" type="hidden" value="patch">
                    <label for="store_name">Store name:</label>
                    <input id="store_name" name="store_name" type="text">

                    <button type="submit" class="btn btn-warning">add</button>
                </form>

            <p>Nevermind? Go <a href="/brands">back</a></p>
        </div>
    </body>
</html>
